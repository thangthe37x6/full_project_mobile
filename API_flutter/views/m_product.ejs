<%- include('./layout/header') %>

<div class="container mt-5">
    <h1 class="text-center">Danh sách món ăn</h1>
    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th>Tên món ăn</th>
          <th>Giá (VND)</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% all_data.product.forEach(p => { %>
          <tr>
            <td><%= p.namefood %></td>
            <td><%= p.price %></td>
            <td>
              <form action="/api/delete-product" method="POST" class="d-inline">
                <input type="hidden" name="namefood" value="<%= p.namefood %>">
                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h2 class="mt-5">Thêm món ăn</h2>
    <form action="/api/add-product" method="POST" class="mt-3">
      <div class="mb-3">
        <label for="namefood" class="form-label">Tên món ăn</label>
        <input type="text" id="namefood" name="namefood" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Giá</label>
        <input type="number" id="price" name="price" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Thêm món ăn</button>
    </form>
  </div>

  <%- include('./layout/footer') %>